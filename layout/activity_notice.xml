<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/some_id"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToOutline="true"
    android:background="@drawable/main_login_test"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/main_login_test"
            android:clipToOutline="true">


            <android.widget.Button
                android:id="@+id/back_btn_han"
                android:layout_width="80px"
                android:layout_height="80px"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="37px"
                android:layout_marginTop="59px"
                android:background="@drawable/back_logo" />


            <TextView
                android:id="@+id/title_notice_text"
                android:layout_width="204px"
                android:layout_height="66px"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="66px"
                android:gravity="center_vertical"
                android:text="공지사항"
                android:textAppearance="@style/sche_title_s" />

            <View
                android:id="@+id/dot_line"
                android:layout_width="1080px"
                android:layout_height="1px"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="191px"
                android:background="@drawable/dot_line"
                android:elevation="4px" />

            <EditText
                android:id="@+id/editText"
                android:layout_width="936px"
                android:layout_height="88px"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="59px"
                android:layout_marginTop="225px"
                android:background="@drawable/notice_edit_id"
                android:hint="단어를 검색하세요!"
                android:inputType="textPersonName"
                android:paddingLeft="27px"
                android:textSize="10sp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="910px"
                android:layout_height="1900px"
                android:layout_marginStart="90px"
                android:layout_marginTop="368px"
                android:gravity="center_vertical" />


        </RelativeLayout>
    </ScrollView>

</RelativeLayout>